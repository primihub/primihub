package(default_visibility = ["//visibility:public"])
load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

filegroup(
    name = "src",
    srcs = glob(["**"]),
    visibility = ["//visibility:public"]
)

cmake(
  name = "eigen",
  cache_entries = {
    "CMAKE_C_FLAGS": "-fPIC",
  },
  build_args = [
    "-j4",
  ],
  lib_source = ":src",
  out_headers_only = True,
  includes = ["eigen3/",],
  install = True,
  visibility = ["//visibility:public"],
)
